            }
            console.log("üìä Stored analysis data for visualizations:", !!window.currentAnalysisData);
            window.currentRepoId = data.analysis.repo_id;
            window.currentRepoId = data.analysis.repo_id;
            console.log("üìä Analysis data stored globally");
                this.analysisData = data.analysis;
                this.currentRepoId = data.analysis.repo_id;
