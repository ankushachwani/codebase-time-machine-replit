        const insights = analysis.insights || {};

        let summaryHTML = `
            <div class="grid grid-3 mb-6">
                <div class="text-center">
                    <h4 style="color: var(--forest-green); font-size: 2rem; font-weight: bold;">${structure.total_commits || 0}</h4>
                    <p>Total Commits</p>
                </div>
                <div class="text-center">
