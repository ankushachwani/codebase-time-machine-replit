// Enhanced tab switching function
window.showTabEnhanced = function(tabName, element) {
    console.log('üîÑ Switching to tab:', tabName);
    
    // Hide all content sections
    const sections = ['analysis-section', 'query-section', 'visualization-section'];
    sections.forEach(sectionId => {
        const section = document.getElementById(sectionId);
        if (section) {
            section.style.display = 'none';
        }
    });
    
    // Show the selected section
    const targetSection = document.getElementById(tabName + '-section');
    if (targetSection) {
        targetSection.style.display = 'block';
        console.log('‚úÖ Showed section:', tabName + '-section');
    } else {
        console.warn('‚ö†Ô∏è Section not found:', tabName + '-section');
    }
    
    // Update tab styles
    const tabs = document.querySelectorAll('.nav-tab');
    tabs.forEach(tab => tab.classList.remove('active'));
    
    if (element) {
        element.classList.add('active');
    }
    
    // If switching to visualization tab, check data availability
    if (tabName === 'visualization') {
        const availableData = window.debugAnalysisData();
        if (!availableData) {
            console.warn('‚ö†Ô∏è No analysis data available for visualizations');
            alert('Please analyze a repository first before generating visualizations.');
        } else {
            console.log('‚úÖ Analysis data available for visualizations');
        }
    }
};

console.log('üîß Enhanced tab switching function added');
